{
  "name": "aoe-taunt-bot",
  "version": "1.0.0",
  "description": "Bot that brings AoE II chat experience into your Discord voice channels.",
  "keywords": [
    "aoe taunt",
    "discord",
    "bot"
  ],
  "bin": "dist/index.js",
  "repository": {
    "url": "https://github.com/alimg/aoe-taunt-bot"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js && npm run lint",
    "build-bin": "npm run build && pkg .",
    "clean": "rm -rf dist",
    "lint": "eslint src/",
    "start": "npm run build && ./dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "alim.gokkaya@gmail.com",
  "license": "MIT",
  "dependencies": {
    "@discordjs/opus": "^0.9.0",
    "@discordjs/voice": "^0.16.0",
    "@keyv/sqlite": "^2.0.3",
    "discord.js": "^14.9.0",
    "keyv": "^4.0.4",
    "loglevel": "^1.8.0",
    "loglevel-plugin-prefix": "^0.8.4",
    "mwn": "^1.11.4",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/keyv": "^3.1.3",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "pkg": "^5.5.1",
    "typescript": "^4.5.4"
  },
  "pkg": {
    "assets": [
      "data/*",
      "data/**/*",
      "node_modules/**/*.node"
    ],
    "scripts": [
      "dist/*.js"
    ],
    "targets": [
      "node16-linux-x64"
    ],
    "outputPath": "dist"
  }
}
